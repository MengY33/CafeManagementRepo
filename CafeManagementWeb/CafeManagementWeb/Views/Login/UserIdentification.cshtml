
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-family: 'Script MT'; color: saddlebrown;" class="cafe_title">Welcome to The Coffee Bean</h1>

@using (Html.BeginForm("UserIdentification", "Login", FormMethod.Post))
{

    <div class="login_outer">
        <div class="login_inner">
            <h2>Sign In</h2><br /><br />

            <label>Email</label>    <!--change to using LabelFor-->
            <input type="text" name="email" class="loginemaitxt" />  <!--change to use TextBoxFor-->
            <br/>

            <label class="loginpasslbl">Password</label>    <!--change to using LabelFor-->
            <input type="password" name="password" class="loginpasstxt" />  <!--change to using TextBoxFor-->
            <br />

            <input type="submit" value="Sign In" class="loginbtn" />
            <br/>

            <div class="forgotpasslbl">Forgot your <a href="@Url.Action("ForgotPass", "Login")">password</a>?</div>
            </div>

            <div class="vertical_line"></div>

        <div class="signup_inner">
            <h2>Create a Membership Account</h2><br/>

            <span>Click below button to register if you don't have a membership account.</span><br/><br/>

            <input type="button" value="Create Account" class="createacc_btn" id="createacc_id" /><br/><br/><br/>

            <span style="font-family: Arial; font-weight: bold;">Why should I create an account?</span>
            <ul>
                <li>Get a free member card</li>
                <li>View your member's points</li>
                <li>View your transactions history</li>
                <li>Enjoy more benefits</li>
            </ul>
        </div>
    </div>
}

@section createacc_link
{
    <script>
        $(document).ready(function () {
            $("#createacc_id").click(function (event) {
                var url = '@Url.Action("Registration", "Member")';
                window.location.href = url;
            });
        });
    </script>
}